<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="ws.moor.railwayclock"
      android:versionName="1.1" android:versionCode="2">
    <uses-sdk android:targetSdkVersion="9" android:minSdkVersion="7"></uses-sdk>


    <application android:icon="@drawable/icon" android:label="@string/app_name" android:description="@string/description">
        <activity android:name=".Clock"
                  android:label="@string/app_name"
                  android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>
</manifest>